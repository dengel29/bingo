{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "type": "module",
  "engines": {
    "node": ">= 19 < 20"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "~29.5",
    "@types/node": "^18.17.4",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "~6.2",
    "@typescript-eslint/parser": "~6.2",
    "concurrently": "^8.2.0",
    "eslint": "~8.46",
    "eslint-config-prettier": "~9.0",
    "eslint-plugin-jest": "~27.2",
    "jest": "~29.6",
    "prettier": "~3.0",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^3.12.7",
    "typescript": "~5.1",
    "view-transitions-api-types": "^0.1.1",
    "vite": "^4.4.9"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "start:dev": "export NODE_ENV=development && npm run build && concurrently npm:watch-*",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "watch-dev": "tsx watch src/main.ts",
    "watch-app": "vite build --watch",
    "build-app": "vite build",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@radix-ui/themes": "^1.0.0",
    "@vitejs/plugin-react": "^4.0.4",
    "express": "^4.18.2",
    "passport-magic-login": "^1.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "tslib": "~2.6",
    "typeorm": "^0.3.17",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
